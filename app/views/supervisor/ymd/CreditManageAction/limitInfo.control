<script type="text/javascript">
//切换附件与通讯录列表
function tabList(i,_this){
	$('.tabColor').css('background','#E4E4E4');
	$(_this).css('background','#D7D7D7');
	$('.tabList').hide();
	$('.tabList').eq(i).show();
}

$('._xf_htgl_jgtitle').click(function(){
	$(this).next().toggle(100);
})


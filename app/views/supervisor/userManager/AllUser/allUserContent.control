          #{th}累计投标数量#{/th}
          #{th}累计投标金额#{/th}
          #{th}累计借款标数量#{/th}
          #{th}累计借款金额#{/th}
          #{th}累计收益#{/th} 
          #{th}绑定手机#{/th} 
          #{th}账户可用余额#{/th}
          #{th}最后登录时间#{/th}
          #{th}状态#{/th}
          #{th}操作#{/th}
        #{/tr}
        #{list page?.page}
        #{tr tr_index:_index}
          #{td}<input type="checkbox" value="${_?.name}" name="name" mobile="${_?.mobile}">#{/td} 
          #{td}${_?.id}#{/td}
          #{td}${_?.name}#{/td}

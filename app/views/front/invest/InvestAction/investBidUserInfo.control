	function calculate(amount){
		var apr = ${bid?.apr} * 1;
		var period = ${bid?.period} * 1;
		var periodUnit = ${bid?.periodUnit} * 1;
		
		var repaymentType = ${bid?.repayment?.id} * 1;
		var awardScale = ${bid?.awardScale} * 1;
		var bonus = ${bid?.bonus} * 1;

		if(amount <= 0 || amount > 100000000 || isNaN(amount)){
			return;
		}

		if(apr > 100 || apr <= 0 || isNaN(apr)){
			return;
		}

		if(period < 1 || period > 1000 || isNaN(period)){
			return;
		}

		if(1 == periodUnit &&　period > 30){
			return ;
		}

		var award = 0;

		if(awardScale > 100 || awardScale < 0){
			return;
		}else if(awardScale != 0){
			award = amount * awardScale / 100;
		}

		if(bonus < 0 || bonus > amount){
			return;
		}else if(bonus != 0){
			award = bonus;
		}

		var interest = 0; // 年、月、日 年利率
		var monthApr = apr / 12 / 100; // 月利率
		var rperiod = 0; // 还款期数

		/* 根据借款期限算出利息 */
		switch(periodUnit){
			/* 年 */
			case -1:
				interest = apr/100*period*amount;
				rperiod = period ;//* 12;
				break;
			/* 月 */
			case 0:
				interest = apr/12/100*period*amount;
				rperiod = period;
				break;
			/* 日 */
			case 1:
				interest = apr/360/100*period*amount;
				rperiod = period;
				break;
		}

		var monthSum = 0;
		var monthText = $("#monthText");

		/* 根据还款方式算出利息 */
		switch(repaymentType){
			/* 按月还款、等额本息 */
			case 1:
				monthSum = (amount * monthApr * Math.pow((1 + monthApr), rperiod)) / (Math.pow((1 + monthApr), rperiod) - 1);
				interest = monthSum * rperiod - amount;
				monthText.html("月还本息:");
				break;

			/* 按月付息、一次还款 */
			case 2:
				monthText.html("月还利息:");
				monthSum = interest / rperiod;
			 	break;

			/* 一次还款 */
			case 3:
				monthText.html("应还本息:");
				monthSum = interest + amount;
				break;
		}

		/* 年化收益、总收益 */
		var apr1 = ${bid?.increaseRate}||0;
		var apr2 = ${activityInfo?.rate2}||0;
		var apr3 = ${activityInfo?.rate3}||0;
		console.log(apr1);
		console.log(apr2);
		console.log(apr3);
		
		var listAction = #{jsAction @front.home.HomeAction.aprCalculator2(':amount', ':apr',':apr1',':apr2',':apr3',':repaymentType',':award',':rperiod',':periodUnit') /};
		console.log({amount:amount, apr:apr,apr1: apr1,apr2: apr2,apr3: apr3,repaymentType:repaymentType,award:award,rperiod:rperiod,periodUnit: periodUnit});
		// listAction({amount:amount, apr:apr,apr1: apr1,apr2: apr2,apr3: apr3,repaymentType:repaymentType,award:award,rperiod:rperiod})
		$.post('@{front.home.homeAction.aprCalculator2}',{amount:amount, apr:apr,apr1: apr1,apr2: apr2,apr3: apr3,repaymentType:repaymentType,award:award,rperiod:rperiod,periodUnit: periodUnit},function(data) {
			console.log(data);
			/*if(!parseInt(data.earning1)){
			  $('.earning1').parent().hide();
